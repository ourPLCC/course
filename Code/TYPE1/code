TrueExp
%%%
    public Val eval(Env env) {
        return new BoolVal(true);
    }

    public Type evalType(TypeEnv tenv) {
        return Type.boolType;
    }
%%%

FalseExp
%%%
    public Val eval(Env env) {
        return new BoolVal(false);
    }

    public Type evalType(TypeEnv tenv) {
        return Type.boolType;
    }
