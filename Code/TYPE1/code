ProcTypeExp
%%%
    public Type toType() {
        List<Type> paramTypeList = new ArrayList<Type>();
        for (TypeExp te : typeExps.typeExpList)
            paramTypeList.add(te.toType());
        Type returnType = typeExp.toType();
        return new ProcType(paramTypeList, returnType);
    }
